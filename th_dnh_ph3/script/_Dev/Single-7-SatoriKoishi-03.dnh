		let d = 40;
		let t = 60;
		let s0 = 8*d/t; //6
		
		ascent(f in 0..12){
			let a0 = getangle(kx,ky,px,py);
			ascent(i in 5..16){
				// let shot = CreateShotA1(kx,ky,2+(i/8),a0+90*(-1)^i, ZPEL_RED,10);
