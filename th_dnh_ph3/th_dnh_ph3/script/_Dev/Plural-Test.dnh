task TPlural {
	let dir = GetCurrentScriptDirectory()~"./";
    let obj = ObjEnemyBossScene_Create();
	
	//params: boss scene object, lifebar number, filepath
	ObjEnemyBossScene_Add(obj,0,dir~"Single-6-14.dnh");
	ObjEnemyBossScene_Add(obj,1,dir~"Single-6-11.dnh");
	ObjEnemyBossScene_Add(obj,1,dir~"Single-6-12.dnh");
	ObjEnemyBossScene_Add(obj,2,dir~"Single-6-02.dnh");
	ObjEnemyBossScene_Add(obj,3,dir~"Single-6-08.dnh");
	// ObjEnemyBossScene_Add(obj,3,dir~"Single-6-05.dnh");
	ObjEnemyBossScene_Add(obj,4,dir~"Single-6-13.dnh");
	
	
	ObjEnemyBossScene_LoadInThread(obj);
	ObjEnemyBossScene_Regist(obj);
	
	//wait for plural to end
	while(!Obj_IsDeleted(obj)){yield;}
	CloseScript(GetOwnScriptID());
	
}


