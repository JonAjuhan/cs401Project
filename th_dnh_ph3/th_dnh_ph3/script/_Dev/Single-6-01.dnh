@Initialize
{
	SetCommonData("CurrentSC","Fantasy \"???\"");
	SetCommonData("Difficulty","Extra");
	
	boss = spawnBoss();
	
	ObjEnemy_SetDamageRate(boss,0,0);
	SetShotAutoDeleteClip(64,96,64,64);
	
	MainTask;
	

}
@MainLoop
{

	if(ObjEnemy_GetInfo(boss, INFO_LIFE) <= 0 && !finishing)
	{
		finishing = true;
		TBreakSpell([]);
	}
	else {
		SetBossHitbox(boss,ex,ey);
	}
	frame++;
	yield;
}


task MainTask {
	
	ObjEnemy_SetDamageRate(boss,0,0);
	ObjMove_SetDestAtFrame(boss, cx, cy-120, 60);
	
	SetSpellCard;
//	MCircNextAlpha = 80;
//	Obj_SetValue(objSpellCircle,"MaxAlpha",64);
	
	ObjEnemyBossScene_StartSpell(objScene);
	ObjEnemyBossScene_SetSpellTimer(objScene,timer*60); //5760
	
//	SetCaution;
//	SetBossBlur(true);
	AuraRainbow(boss,255,255,255);
	
	wait(90);
	Tmovement(cx-120,cx+120, cy-90,cy-60, 60,240, [MOVE_PLAYERBIAS,2,0,MOVE_MAXSPEED,1.5] );
	ObjEnemy_SetDamageRate(boss,24,8);
	frame = 0;

	TShoot;
//	TBigShots;
	//TFog;
}




task TShoot {
	let seobj=ObjSound_Create;

	let shot;
	
	let xpoints = [0];
	let ypoints = [0];
	ascent(i in 0..10){ 
		xpoints=xpoints ~ [ cx+150*cos(270+36*i) ]; 
		ypoints=ypoints ~ [ cy+150*sin(270+36*i) ];
	}
	xpoints = xpoints ~ [ sx ];
	ypoints = ypoints ~ [ 0 ];
	
	let count = 0;
	let num = 100;
	let del = 1;
	
	let time = num*del;
	let dt = 1/(num*del);
	
	let x; let y;
	let dx; let dy;
	let a;
	
	let point;
	
	while(!Obj_IsDeleted(boss)) {
		
		ascent(i in 0..num){
			point = GetBezierCoordinates(xpoints,ypoints,i*dt);
			x=point[0]; y=point[1]; a=point[2]+90;
			
			ascent(j in 0..7){
				shot = CreateShotA2(x+10*j*cos(a),y+10*j*sin(a), 0,a, 0.01,  3,  SCALE_MAGENTA-j, 15);
			}
			
			SE_PlayA2(se_chime,60,seobj,15);
			wait(del);
		}
		SE_Play(se_chime2,100);
		wait(120);
		
		descent(i in 0..num){
			point = GetBezierCoordinates(xpoints,ypoints,i*dt);
			x=point[0]; y=point[1]; a=point[2]+90;
			
			ascent(j in 0..7){
				shot = CreateShotA2(x+10*j*cos(a),y+10*j*sin(a), 0,a, 0.01,  3,  SCALE_MAGENTA-j, 15);
			}
			
			SE_PlayA2(se_chime,60,seobj,15);
			wait(del);
		}
		SE_Play(se_chime2,100);
		wait(120);
	}
}

task TBigShots {
	let shot; 
	let dir=1;
	let seobj = ObjSound_Create;
	
	wait(120);
	while(!Obj_IsDeleted(boss)){

		wait(20);
		SE_PlayA2(se_swrbeam,100,seobj,30);
		SetAttackPose(60);
		wait(20);
		ascent(i in 0..10) {
			loop(6){
				shot = CreateShotB2(swdx,swdy,  rand(rand(0,2),2)*dir,rand(-0.25,1),   rand(-0.05,-1.5)*dir, rand(-0.5,-1.5),    -2*dir,-2,  GLOW_RED+500, 10);
		
			
				dir*=-1;
				yield;
			}
			SE_Play(se_swrlaser,100);
		}
		wait(20);
		//SE_PlayA2(se_swrbeam,100,seobj,30);
		
		wait(120);
		
	}
	
}







