	let ang1 = 120; //240-(N-1)*6;
	
	let a = 0;
		
	while(!Obj_IsDeleted(boss)) {
			
		ascent(k in 0..3) {
			ascent(i in 0..N) {
				ang = ang0+ang1*k+6*i + 15*a;
				ascent(j in 1..4){
					shot = CreateShotA2(ex+(rad0+20*(j-1))*cos(ang),ey-5+(rad0+20*(j-1))*sin(ang),0,ang+90*dir,-0.01*j,-0.5*j, 765, 5); //49 //212
			//		setOrbit(shot,ex,ey-5,-1.5*j*dir,1.1);
				//	ObjMove_AddPatternA2(shot,60,NO_CHANGE,NO_CHANGE,-1,0,1.5);
					//ObjMove_AddPatternB3(shot,1,0,0,rand(0,0.05)*dir, 0.1, rand(0,0.25*dir), 3, 212);
				}
			}
		}
		a++; dir*=-1;
		SE_PlayA2(se_shot,30,seobj,30);
		wait(15);
		
	}
}



task TBigShots {
	let shot; let ang;
	let xdir = -1; let ydir;
	
	let ax; let ay;
	
	while(!Obj_IsDeleted(boss)) {
		wait(30);
		SetAttackPose(45);
		wait(30);
		
		ang = AimBounce(ex,ey-15,px,py,TOP+xdir); //90+(40+rand(-10,10))*dir;
		//shot = CreateShotA2(ex,ey-15,3,ang,-0.0,1.5, 823, 0);
		shot = CreateLooseLaserA1(ex,ey-15,10,ang,500,15,1001,0);
	//	BounceA1(shot, 1, [LFT,RGT]);
		TConvertShots(shot);
		SE_Play(se_laser,60);		
		xdir*=-1;
		
		wait(60);
		ObjMove_SetDestAtFrame(boss,(2*px+rand(cx-120,cx+120))/3,rand(cy-40,cy-90),60);
	}
	
	
}




task TConvertShots(mainshot) {
	let shot; let shots; let x; let y;
	let seobj = ObjSound_Create;
	let types = [758,752,756]; //765,146
	//let types = [710,716];
	//let types2 = [50,56];
	let j = 0; let ang;
	
	let subshot = CreateShotA1(ObjMove_GetX(mainshot),ObjMove_GetY(mainshot),ObjMove_GetSpeed(mainshot),ObjMove_GetAngle(mainshot), 857, 0); //879
	ObjShot_SetSpellResist(mainshot,true);
	ObjShot_SetSpellResist(subshot,true);
	
	while(!Obj_IsDeleted(mainshot)) {
		x = ObjMove_GetX(mainshot); y = ObjMove_GetY(mainshot);
		shots = GetShotIdInCircleA2(x,y,30,TARGET_ENEMY);
		ascent(i in 0..length(shots)) {
			shot = shots[i];
			if(ObjShot_GetImageID(shot) == 765) { //212
				
				ang = AimWrap(ObjMove_GetX(shot),ObjMove_GetY(shot),px,py,1);
				ObjMove_AddPatternA3(shot,0,0,ang,0.05,0, 3.5, types[j%3]); //146
				CustWrap(shot);
				//WrapA1(shot, 1, [TOP]);
				
				Obj_SetRenderPriorityI(shot,61);
				
				SE_PlayA2(se_chime,30,seobj,30);
				j++;
			}
		}
		if(isOffScreen(mainshot)){
			let angle = ObjMove_GetAngle(mainshot);
			let speed = ObjMove_GetSpeed(mainshot);
			let vx = cos(angle)*speed;
			let vy = sin(angle)*speed;
			BurstShot(x,y,atan2(vy,vx*-1),30,10);
			SE_Play(se_tan00,100);
			ObjShot_FadeDelete(mainshot);
			return;
		}
		yield;
	}
}


function BurstShot(x,y,ang,N,spread) {
	let shot;
	let types = [758,765,752,756];
	let variance = spread/30;
	let sp;
	ascent(i in 0..N) {
		sp = 2-rand(1,2)*variance;
		shot = CreateShotA2(x,y,3*sp,ang+rand(-spread/2,spread/2),-0.15*sp,2*sp,types[i%4],10);
		BounceA1(shot,-1,[BTM]);
	}
}



function CustWrap(shot) {
	task TCustWrap(shot) {
		while(ObjMove_GetY(shot)>0){
			yield;
		}
		ObjMove_SetY(shot,sy);
//		ObjMove_AddPatternA3(shot,0,0,ang,0.05,0, 3.5, 146);
	//	ObjMove_AddPatternA3(shot,0,NO_CHANGE,NO_CHANGE,NO_CHANGE,0,3.5,765);
	}
	TCustWrap(shot);
}











task TFinalize() {
	
	
	SE_Play(spellbreak,100);
	DeleteShotAll(TYPE_ALL, TYPE_ITEM);
	PPCExplode(boss,[255,255,255]); PPCExplodeRainbow(boss);
	wait(15);
		
	
	Obj_Delete(boss);
	CloseScript(GetOwnScriptID());
	return;
}


